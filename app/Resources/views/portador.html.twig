{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{ asset ('CSS/portadorCSS.css') }}">
{% endblock %}


{% block body %}
{{ parent() }}

<section id="principal_portador">
<h3>Pesquisa por portador<h3>

<table id="tabela_portador">
	<tr>
		<th>Portador</th>
                <th>Orgao Superior</th>
                <th>Orgao Subordinado</th>
		<th>Unidade Gestora</th>
                <th>Ano</th>
                <th>Mes</th>
                <th>Nome Transacao</th>
                <th>Nome portador</th>
                <th>Destinatario</th>
                <th>Data Transacao</th>
                <th>Valor Transacao</th>
	</tr>
	{{ tabela|raw }}
</table>

{% set fatorPaginacao = ( atual // 10) * 10 %}

{% if atual - 10 < 1 %}
        <a href="{{path('portador', {'page': 1})}}"><<</a>
{% else %}
        <a href="{{path('portador', {'page': atual - 10})}}"><<</a>
{% endif %}

{% for i in fatorPaginacao .. fatorPaginacao + 9  %}
        {% if i <= paginas %}
                <a href="{{path('portador', {'page': i + 1 })}}">{{ i + 1 }}</a>
        {% endif %}
{% endfor %}

<a href="{{path('portador', {'page': fatorPaginacao + 11})}}">>></a>

</section>

{% endblock %}

