{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{ asset ('CSS/destinatarioCSS.css') }}">
{% endblock %}


{% block body %}
{{ parent() }}

<section id="principal_destinatario">
<h3>Pesquisa por destinatario<h3>

<table id="tabela_destinatario">
	<tr>
		<th>Orgao Superior</th>
		<th>Orgao Subordinado</th>
		<th>Unidade Gestora</th>
		<th>Ano</th>
		<th>Mes</th>
		<th>Nome Transacao</th>
		<th>Nome portador</th>
		<th>Destinatario</th>
		<th>Data Transacao</th>
		<th>Valor Transacao</th>
	</tr>
	{{ tabela|raw }}
</table>

{% if paginas - 10 < 1 %}
        <a href="{{path('destinatario', {'page': 1})}}"><<</a>
{% else %}
        <a href="{{path('destinatario', {'page': paginas - 10})}}"><<</a>
{% endif %}

{% for i in paginas .. paginas + 9  %}
<a href="{{path('destinatario', {'page': i + 1})}}">{{i + 1}}</a>
{% endfor %}

<a href="{{path('destinatario', {'page': paginas + 11})}}">>></a>


</section>

{% endblock %}
